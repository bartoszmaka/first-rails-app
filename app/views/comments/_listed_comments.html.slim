  - @article.comments.reverse.each do |comment|
    = render 'votable/voting', votable: comment
    .row
      .col-sm-2
        b.text-left = link_to comment.author, user_path(comment.user)
      .col-sm-10
        p = comment.content
        p.text-right
          = link_to 'Edit Comment', edit_article_comment_path(@article, comment), class: 'btn btn-default'
          = link_to 'Delete Comment', article_comment_path(@article, comment), method: :delete, class: 'btn btn-default'
